<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container-books">
 <div class="page-top align-items-center">
    <h1>Books availables</h1>
   <span class="add"><%= link_to "Add a book", new_book_path(@book)  %></span>
  </div>
  <%= simple_form_for :search, url: books_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" placeholder="A reading wish..." name="[query]" id="pg_search" />
    <div class="row flex-row d-flex justify-content-between">
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Let's see if we can make you happy...
      </button>
       <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-hand-point-left"></i> Let's go back ...
      </button>
    </div>
  </div>
<% end %>
  <div class="cards">
    <% @books.each do |book| %>
    <div class="card-product">
        <%= cl_image_tag book.photo.key %>
        <div class="card-product-infos">
          <h2 class="book-title"><%= link_to book.title, book_path(book) %></h2>
          <h5><%= book.author %></h5>
          <div class="card-text">
            <p><%= book.category %></p>
            <p> <%= book.description.to_s.truncate(95) %> <%= link_to "Read more", book_path(book) %>  </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
