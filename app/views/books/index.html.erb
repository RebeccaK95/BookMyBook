<div class="banner">
  <div class="container">
    <h1>Search for a book</h1>
    <%= link_to "Add a book", new_book_path(@book), class: "button-white" %>
  </div>
</div>

<div class="container-books">
  <%= simple_form_for :search, url: books_path, method: :get do |f| %>
    <div class="search-form-control form-group mb-4">
      <input class="form-control string required" type="text" placeholder="A reading wish..." name="[query]" id="pg_search" />
      <div class="row flex-row d-flex justify-content-between mx-0 my-2">
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Let's see if we can make you happy...
        </button>
         <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-hand-point-left"></i> Let's go back ...
        </button>
      </div>
    </div>
  <% end %>
  <hr>
  <h2>Books available</h2>
  <div class="cards mt-4">
    <% @books.each do |book| %>
    <div class="card-product">
        <%= cl_image_tag book.photo.key %>
        <div class="card-product-infos">
          <h2 class="book-title"><%= link_to book.title, book_path(book), class: "stretched-link" %></h2>
          <h5><%= book.author %></h5>
          <div class="card-text">
            <p><%= book.category %></p>
            <p><%= book.description.to_s.truncate(95) %> <%= link_to "Read more", book_path(book) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
