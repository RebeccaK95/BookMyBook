<div class="banner">
</div>
<div class="container-show">
  <div class="column">
    <div class="img">
      <%= cl_image_tag @book.photo.key %>
    </div>
  </div>
  <div class="column flex-column d-flex justify-content-between">
   <!--  <div class="head-show">

      <span class="button-show">Rent me</span>
      <span class="heart"><i class="fal fa-heart"></i></i></span>
    </div> -->

    <div class="d-flex">
      <div class="mr-auto p-2"><h1 class="book-title"><%= @book.title %></h1></div>
      <div class="p-2"><span class="button-show">Rent me</span></div>
      <div class="p-2"><a class="heart heart-solid"><i id="heart-id" class="fa-heart far"></i></a></div>
    </div>

    <h3 style="padding-left: 8px;"><%= @book.author %></h3>
    <p style="padding-left: 8px;"><%= @book.category %></p>
    <p style="padding-left: 8px;"><%= @book.description %></p>
    <p style="padding-left: 8px;"><%= @book.address %></p>
    <div class="link-show">
      <i class="fas fa-hand-point-left"></i><%= link_to "  Go back to all books", books_path  %>
    </div>
  </div>
</div>
<div class="container-show">
  <div id="form-rent">
    <%= render "bookings/new", book: @book, booking: @booking %>
  </div>
</div>



