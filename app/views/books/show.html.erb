<div class="container-show">
  <div class="column">
    <div class="img">
      <%= cl_image_tag @book.photo.key %>
    </div>
  </div>
   <div class="column flex-column d-flex justify-content-between">
    <div class="head-show">
      <h1><%= @book.title %></h1>
      <span class="button-show">Rent me</span>
    </div>
    <h3><%= @book.author %></h3>
    <p><%= @book.category %></p>
    <p><%= @book.description%></p>
    <p><%= @book.address %></p>

   <div class="link-show"> <%= link_to "Delete book",
                book_path(@book),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this book?" }
                %>
  </div>
  <div class="link-show">
    <%= link_to "Go back to all books", books_path  %>
  </div>
</div>

</div>
<div class="container-books">
  <div id="form-rent">
    <%= render "bookings/new", book: @book, booking: @booking %>
  </div>
</div>


<div id='book-booking-dates' data-unavailable="<%= @book.unavailable_dates.to_json %>">
    <% if current_user.id != @book.user_id  %>
       <%= simple_form_for([@book, @booking]) do |f| %>
           <%= f.input :start_date, as: :string, type: :text, class: "booking_start_date" %>
           <%= f.input :end_date, as: :string, type: :text, class: "booking_end_date" %>
           <%= f.submit "Book", class: "btn btn-primary" %>
        <% end %>
    <% end %>
 </div>

