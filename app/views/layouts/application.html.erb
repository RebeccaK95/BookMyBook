<!DOCTYPE html>
<html>
  <head>
    <title>BookMyBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  <div class="navbar">
    <div>
      <%= image_tag "book-logo2.png", id: "logo" %>
  </div>
  <div><h1 id="title"><%= link_to BookMyBook, root_path %> </h1></div>
    <div>
      <% if user_signed_in? %>
        <% if current_user.photo.nil? %>
          <%= cl_image_tag current_user.photo.key, class:"avatar" %>
          <span id="login"><%= link_to "Log out", destroy_user_session_path, :method => :delete %></span>
        <% else %>
          <span id="login"><%= link_to "Log out", destroy_user_session_path, :method => :delete %></span>
        <% end %>
      <% else %>
       <span id="login"><%= link_to "Log in", user_session_path %></span>
      <% end %>
    </div>
  </div>




  <body class="<%= @home_page ? 'homepage' : ''%>">
    <%= render 'shared/flashes' %>
    <%= yield %>
  </body>
</html>
